<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="me.weeravit.androidnewssample.module.news.News" />

        <variable
            name="listener"
            type="me.weeravit.androidnewssample.module.news.NewsActivity.Listener" />

    </data>

    <me.weeravit.androidnewssample.view.NewsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:onNewsClick="@{v -> listener.onNewsClick(item)}"
        app:imageUrl="@{item.imageUrl}"
        app:title="@{item.title}" />

</layout>
